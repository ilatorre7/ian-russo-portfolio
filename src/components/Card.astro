---
const { route, name, description, img, alt } = Astro.props;
---

<a href={route} class="flex flex-col gap-8">
  <img class="rounded-xl" src={img} alt={alt} />
  <div class="flex flex-col items-center gap-4">
    <h2 class="text-2xl">{name}</h2>
    <p class="text-lg">{description}</p>
  </div>
</a>
